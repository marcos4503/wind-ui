<?xml version="1.0" ?>
<component>
    <!-- Component HTML default values for yours HTML code Variables -->
    <!-- Set the default value of the undefined variables here when instantiating this component in yours fragments -->
    <!-- Use "(__WindUiPhp::getResourcePath__)/yourResource" to get path of a resource of your file. This only works in JSON for setting default values of variables. -->
    <!-- It is important that the JSON syntax written here is correct, or Wind UI will not be able to understand the default values of your component's variables. -->
    <json type="text/json" app="wind.ui">
        {
        "id":"",
        "style":"",
        "label":"",
        "autocomplete":"off",
        "tooltip":"",
        "onchangecontent":"",
        "message":"No Value",
        "requirechecked":"false",
        "requireunchecked":"false"
        }
    </json>

    <!-- Component HTML Code -->
    <!-- Wind UI component Variables (example:  __variableName__) only works here! -->
    <html type="text/html" app="wind.ui">

        <div id="__id__" class="componentBoolFieldParent componentBoolFieldTooltip" style="__style__" onmouseover="BoolField.autoShowTooltip(this, true);" onmouseout="BoolField.autoShowTooltip(this, false);">

            <label for="__id__Input">__label__</label>

            <div class="componentBoolFieldMainContainer">
                <label class="componentBoolFieldcontainer">
                    <div>
                        __message__
                    </div>
                    <input id="__id__Input" type="checkbox" autocomplete="__autocomplete__"
                    requirechecked="__requirechecked__" requireunchecked="__requireunchecked__" isvalid="true"
                    onchangecontent="__onchangecontent__"
                    onclick="BoolField.autoValidation(this);" />
                    <span id="__id__Check" class="componentBoolFieldcheckmark"></span>
                </label>
            </div>
            
            <div class="componentBoolFieldStatus">
                <div id="__id__Status" class="componentBoolFieldStatusText">
                    Empty
                </div>
                <div>
                </div>
            </div>

            <span class="componentBoolFieldTooltipText">
                <div id="__id__Tooltip" class="componentBoolFieldTooltipTextContent">__tooltip__</div>
            </span>
        
        </div>

    </html>
</component>