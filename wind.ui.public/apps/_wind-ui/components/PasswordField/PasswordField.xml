<?xml version="1.0" ?>
<component>
    <!-- Component HTML default values for yours HTML code Variables -->
    <!-- Set the default value of the undefined variables here when instantiating this component in yours fragments -->
    <!-- Use "(__WindUiPhp::getResourcePath__)/yourResource" to get path of a resource of your file. This only works in JSON for setting default values of variables. -->
    <!-- It is important that the JSON syntax written here is correct, or Wind UI will not be able to understand the default values of your component's variables. -->
    <json type="text/json" app="wind.ui">
        {
        "id":"",
        "style":"",
        "label":"",
        "autocomplete":"off",
        "tooltip":"",
        "onchangecontent":"",
        "value":"",
        "minchars":"0",
        "requirespecialchars":"false",
        "requirenumbers":"false",
        "allowempty":"true"
        }
    </json>

    <!-- Component HTML Code -->
    <!-- Wind UI component Variables (example:  __variableName__) only works here! -->
    <html type="text/html" app="wind.ui">

        <div id="__id__" class="componentPasswordFieldParent componentPasswordFieldTooltip" style="__style__" onmouseover="PasswordField.autoShowTooltip(this, true);" onmouseout="PasswordField.autoShowTooltip(this, false);">

            <label for="__id__Input">__label__</label>

            <input id="__id__Input" type="password" value="__value__" autocomplete="__autocomplete__"
            minchars="__minchars__" requirespecialchars="__requirespecialchars__" requirenumbers="__requirenumbers__" allowempty="__allowempty__" isvalid="true" 
            onchangecontent="__onchangecontent__"
            onkeydown="PasswordField.autoValidation(this);" onchange="PasswordField.autoValidation(this);" onpaste="PasswordField.autoValidation(this);" oninput="PasswordField.autoValidation(this);" />

            <div class="componentPasswordFieldStatus">
                <div id="__id__Status" class="componentPasswordFieldStatusText">
                    Empty
                </div>
                <div>
                </div>
            </div>

            <span class="componentPasswordFieldTooltipText">
                <div id="__id__Tooltip" class="componentPasswordFieldTooltipTextContent">__tooltip__</div>
            </span>

        </div>

    </html>
</component>